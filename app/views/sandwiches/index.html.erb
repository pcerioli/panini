<div class="sandwiches" id="sandwiches">
  <div id="container" class="clearfix infinite-scroll">

    <% Rails.logger.info("params = #{request.params}") %>
    
    <% if request.params["page"].blank? %>

      <div class="box photo col3 front">
        <p class="intro">
          What would you like to eat today? 
          Click on the sandwich you want, <br><br>
          - or - <br><br>
          click the wheel of luck and we will make a random choice for you
        </p>
      </div> 

    <% end %>



    <%= render 'sandwiches' %>

  </div>

</div>

