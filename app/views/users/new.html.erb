<div class="well-center">
	<div class="well" style="width:500px;">

		<h2>Sign Up</h2>

		<%= simple_form_for @user, url: signup_path do |f| %>

		  <%= f.input :fullname %>
		  <%= f.input :email %>
		  <%= f.input :password %>
		  <%= f.input :password_confirmation %>
		  <%= f.button :submit, :class=>"btn btn-primary" %>

		<% end %>

	</div>
</div>


