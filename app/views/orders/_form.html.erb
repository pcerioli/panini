<%= simple_form_for [@sandwich, @order]  do |f| %>
  <%= f.error_notification %>

  <div>
  	<img src="<%= @sandwich.image %>" alt="<%= @sandwich.name %>">
  </div>

  <div class="form-inputs">
  	<%#= f.input :sandwich_id %>
    <%= f.input :client_name, label: "Your Name" %>
    <%= f.input :variation, as: :text,  label: "Variations", :input_html => { rows: 3}  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
