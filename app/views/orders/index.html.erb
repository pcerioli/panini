<h1>Listing orders</h1>

<div id="order-index">

  <% @orders.each do |order| %>

    <div class="span7 well">

      <div class="order-img span2 well well-small">
        <%= image_tag(order.sandwich.image_url(:thumb), :alt => order.sandwich.name) %>
      </div>

      <div class= "order-desc span6">
          Date: <%= order.created_at.to_date %><br>
          For: <strong><%= order.client_name %></strong><br>
          <%= order.sandwich.name %><br>
          Optional Variations: <%= order.variation %>

      </div>
    
    </div>

  <% end %>

</div>

<br />

<%#= link_to 'New Order', new_order_path %>
